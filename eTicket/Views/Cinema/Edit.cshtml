@model Cinema
@{
    ViewData["Title"] = "Update cinema";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Update Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="danger"></div>

                    <div class="mt-4">
                        <div class="form-group text-center">
                            <img class="border-info img-fluid" style="max-width:200px" id="CinemaUrprview" />
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="form-group">
                            <label asp-for="CinemaLogoUrl" class="control-label"></label>
                            <input asp-for="CinemaLogoUrl" class="form-control" />
                            <span asp-validation-for="CinemaLogoUrl" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="form-group">
                            <label asp-for="CinemaName" class="control-label"></label>
                            <input asp-for="CinemaName" class="form-control" />
                            <span asp-validation-for="CinemaName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mt-4">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mt-4">
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btnbtn-outline-success" style="float:right" />
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </div>


                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaUrprview');
            output.src = $("#CinemaLogoUrl").val();
        })
        $("#CinemaLogoUrl").on("change", function () {
            var output = document.getElementById('CinemaUrprview');
            output.src = $(this).val();
        })
    </script>
}

