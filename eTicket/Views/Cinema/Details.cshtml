@model Cinema
@{
    ViewData["Title"] = "Cinema Details";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Cinema Details @Model.CinemaName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

                <div class="mt-4">
                    <div class="form-group text-center">
                        <img class="border-info img-fluid" style="max-width:200px" id="CinemaUrprview" />
                    </div>
                </div>
                <div class="mt-4">
                    <div class="form-group">
                        <label asp-for="CinemaLogoUrl" class="control-label"></label>
                        <input asp-for="CinemaLogoUrl" class="form-control" readonly />
                        <span asp-validation-for="CinemaLogoUrl" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="form-group">
                        <label asp-for="CinemaName" class="control-label"></label>
                        <input asp-for="CinemaName" class="form-control" readonly />
                        <span asp-validation-for="CinemaName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="mt-4">
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a class="btn btn-outline-success " style="float:right" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    }
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaUrprview');
            output.src = $("#CinemaLogoUrl").val();
        })
        $("#CinemaLogoUrl").on("change", function () {
            var output = document.getElementById('CinemaUrprview');
            output.src = $(this).val();
        })
    </script>
}
